<p id="notice"><%= notice %></p>

<h1>Listing Reports</h1>

<table>
  <thead>
    <tr>
      <th>Reporter</th>
      <th>Title</th>
      <th>Coordinate x</th>
      <th>Coordinate y</th>
      <th>Short desc</th>
      <th>Classification</th>
      <th>Date issude</th>
      <th>Full report</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.reporter_id %></td>
        <td><%= report.title %></td>
        <td><%= report.coordinate_x %></td>
        <td><%= report.coordinate_y %></td>
        <td><%= report.short_desc %></td>
        <td><%= report.classification_id %></td>
        <td><%= report.date_issude %></td>
        <td><%= report.full_report %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

