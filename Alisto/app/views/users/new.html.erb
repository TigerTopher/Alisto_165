<section id="contact">
  <div class="container">
	    <div class="row">
	        <div class="col-lg-12 text-center">
	            <h2 class="section-heading">Sign Up</h2>
	            <h3 class="section-subheading text-muted" style="color: white;">Stay Protected! Be part of us. Be part of Alisto!</h3>
	        </div>
	    </div>
	    <div class="row">
	    	<div class="col-lg-3"></div>
	    	<div class="container-fluid col-lg-6">
			    <%= form_for(@user) do |f| %>
			      <% if @user.errors.any? %>
			        <div id="error_explanation" style="margin-left: 12.5%">
			          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
			          <ul>
			          <% @user.errors.full_messages.each do |message| %>
			            <li><%= message %></li>
			          <% end %>
			          </ul>
			        </div>
			      <% end %>
			</div>
		    <div class="col-lg-3"></div>
	    </div>
	    <div class="row">
	    	<div class="col-lg-3"></div>
	    	<div class="col-lg-6 text-center">
			      <div class="field form-group">
			        <%= f.label "First Name:", class: 'col-sm-4 control-label vertical-center', style: "color: #FEC503; font-size: 150%; text-align: right; display-table: cell; vertical-align: middle;"%>
			        <div class="col-sm-8">
				        <%= f.text_field :fname, class: 'form-control', placeholder: "Your First Name"%>
					</div>
			      </div>
			      
			      <div class="row" style="margin: 5px;"></div>
			      <div class="field form-group">
			        <%= f.label "Last Name: ", class: 'col-sm-4 control-label vertical-center', style: "color: #FEC503; font-size: 150%; text-align: right; display-table: cell; vertical-align: middle;"%>
			     	<div class="col-sm-8">
			        	<%= f.text_field :lname, class: 'form-control', placeholder: "Your Last Name" %>
			      	</div>
			      </div>

			      <div class="row" style="margin: 5px;"></div>
			      <div class="field form-group">
			        <%= f.label "Username: ", class: 'col-sm-4 control-label vertical-center', style: "color: #FEC503; font-size: 150%; text-align: right; display-table: cell; vertical-align: middle;"%>
			     	<div class="col-sm-8">
				        <%= f.text_field :username, class: 'form-control', placeholder: "Your Username" %>
			      	</div>
			      </div>
			      
			      <div class="row" style="margin: 5px;"></div>
			      <div class="field form-group">
			        <%= f.label "Email: ", class: 'col-sm-4 control-label vertical-center', style: "color: #FEC503; font-size: 150%; text-align: right; display-table: cell; vertical-align: middle;"%>
			     	<div class="col-sm-8">
				        <%= f.text_field :email, class: 'form-control', placeholder: "Your Email"%>
			      	</div>
			      </div>

			      <div class="row" style="margin: 5px;"></div>
			      <div class="field form-group">
			        <%= f.label "Password: ", class: 'col-sm-4 control-label vertical-center', style: "color: #FEC503; font-size: 150%; text-align: right; display-table: cell; vertical-align: middle;"%>
			     	<div class="col-sm-8">
				        <%= f.password_field :password, class: 'form-control', placeholder: "Enter your Password" %>
			      	</div>
			      </div>

			      <div class="row" style="margin: 5px;"></div>
			      <div class="field form-group">
			        <%= f.label "Confirmation:", class: 'col-sm-4 control-label vertical-center', style: "color: #FEC503; font-size: 150%; text-align: right; display-table: cell; vertical-align: middle;"%>
			     	<div class="col-sm-8">
				        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Enter your Password Again" %>
			      	</div>
			      </div>


			      <div class="row" style="margin: 15px;"></div>
			      <div class="actions">
			        <%= f.submit "Sign Up", :class=> "btn btn-xl" %>
			      </div>
			    <% end %>
			    <hr>
			    <%= link_to 'Already Signed-Up? Login Here.', :style => "color: #FEC503", :controller => "sessions", :action => "new"%>
			</div>
	    	<div class="col-lg-3"></div>
		</div>
	</div>
</section>

