<section class="bg-light-gray">
  <div class="row text-center">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Listing of Anonymous Reports</h2>
            <h3 class="section-subheading text-muted">Here are all the reports coming from anonymous reporters.</h3>
        </div>
    </div>
  </div>
  <div class="row text-center">
    <div class="col-lg-3">
        <h4 class="section-subheading text-muted" style="color: #333;">Admins Only Here!</h4>
    </div>

    <div class="col-lg-9" style="border-left: 1px solid #555; border-width:2px; ">
    <p id="notice"><%= notice %></p>
    <h1>Listing Users</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Coordinate x</th>
          <th>Coordinate y</th>
          <th>Short desc</th>
          <th>Classification</th>
          <th>Date issued</th>
          <th>Full report</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @anon_reports.each do |anon_report| %>
          <tr>
            <td><%= anon_report.title %></td>
            <td><%= anon_report.coordinate_x %></td>
            <td><%= anon_report.coordinate_y %></td>
            <td><%= anon_report.short_desc %></td>
            <td><%= anon_report.classification %></td>
            <td><%= anon_report.date_issued %></td>
            <td><%= anon_report.full_report %></td>
            <td><%= link_to 'Show', anon_report %></td>
            <td><%= link_to 'Edit', edit_anon_report_path(anon_report) %></td>
            <td><%= link_to 'Destroy', anon_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>


      <%= link_to 'New Anonymous Report +', new_anon_report_path, :class=> "btn btn-xl"  %>

      </div>
      </div>
    </div>
</section>

