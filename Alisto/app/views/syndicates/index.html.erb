<div class="row text-center">
  <div class="col-lg-3">
  <br>
  <br>
  <br>
  <h4 class="section-subheading text-muted" style="color: #333; text-align: center;">Here is a list of all the Syndicates we have in Record</h4>
  </div>
  <div class="col-lg-9" style="border-left: 1px solid #555; border-width:2px; ">
  <p id="notice"><%= notice %></p>
  <!-- <h1>Anonymous Reports</h1>-->

  <table class="table table-striped" >
  <thead>
    <tr>
      <th style="text-align: center;">Name</th>
      <th style="text-align: center;">Overview</th>
      <th style="text-align: center;">Report count</th>
      <th colspan="3" style="text-align: center;">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @syndicates.each do |syndicate| %>
      <tr>
        <td><%= syndicate.name %></td>
        <td><%= syndicate.overview %></td>
        <td><%= syndicate.report_count %></td>
        <td><%= link_to 'Show', syndicate, :class=> "btn btn-default", :style=> "width: 100%;"%></td>
        <td><%= link_to 'Edit', edit_syndicate_path(syndicate), :class=> "btn btn-default", :style=> "width: 100%;"%></td>
        <td><%= link_to 'Destroy', syndicate, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-default", :style=> "width: 100%;"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Syndicate +', new_syndicate_path, :class=> "btn btn-xl"  %>
